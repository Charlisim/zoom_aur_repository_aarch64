_update() {
	echo -e "\e[34;1m==>\e[39;1m Updating desktop MIME database...\e[0m"
	update-desktop-database -q

	echo -e "\e[34;1m==>\e[39;1m Updating icon cache...\e[0m"
	xdg-icon-resource forceupdate --theme hicolor &>/dev/null
}

post_install() {
	_update
}

post_upgrade() {
	_update
}

post_remove() {
	_update
}
